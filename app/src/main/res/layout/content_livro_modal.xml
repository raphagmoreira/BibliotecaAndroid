<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LivroModalActivity"
    tools:showIn="@layout/app_bar_livro_modal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tblImagemLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imgLivro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:layout_span="2"
                android:scaleType="center"
                android:src="@drawable/ic_livro" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:id="@+id/txtTituloLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTituloLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/txtAutorLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_autor"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:id="@+id/txtCapaLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capa"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCapaLivro"
            android:layout_width="320dp"
            android:layout_height="match_parent" >
        </EditText>

        <Button
            android:id="@+id/btnUploadCapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:clickable="true"
            android:text="Selecionar Capa" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <Button
            android:id="@+id/btnSalvarLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Salvar" />


    </TableLayout>

</android.support.constraint.ConstraintLayout>